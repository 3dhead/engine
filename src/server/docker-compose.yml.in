version: '3'

services:
  db:
    image: postgres:11
    restart: always
    volumes:
      - db:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: vengi
      POSTGRES_USER: vengi
      POSTGRES_PASSWORD: @DB_PW@
    ports:
      - 5432:5432

  app:
    build:
      context: @ROOT_DIR@
      dockerfile: @DOCKERFILE_TARGET@
      args:
        buildno: 1
    restart: always
    ports:
      - 11337:11337
    environment:
      DB_HOST: db
      DB_NAME: vengi
      DB_USER: vengi
      DB_PW: @DB_PW@
    depends_on:
      - db

volumes:
  db:

